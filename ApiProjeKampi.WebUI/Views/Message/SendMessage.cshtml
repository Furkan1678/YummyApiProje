@model ApiProjeKampi.WebUI.Dtos.MessageDtos.CreateMessageDto


<form asp-action="SendMessage" asp-controller="Message" method="post" class="php-email-form" data-aos-delay="600">
	<div class="row gy-4">

		<div class="col-md-6">
			<input type="text" asp-for="NameSurname"  class="form-control" placeholder="Adınız Soyadınız" required="">
		</div>

		<div class="col-md-6 ">
			<input type="email" asp-for="Email" class="form-control" placeholder="Email Adresiniz" required="">
		</div>

		<div class="col-md-12">
			<input type="text" asp-for="Subject" class="form-control" placeholder="Konu" required="">
		</div>

		<div class="col-md-12">
			<textarea asp-for="MessageDetails" class="form-control" rows="6" placeholder="Mesajınız" required=""></textarea>
		</div>

		<div class="col-md-12 text-center">
			<div class="loading">Yükleniyor</div>
			<div class="error-message"></div>
			<div class="sent-message">Mesajınız Başarıyla Gönderildi. Teşekkür ederiz!</div>

			<button type="submit">Mesajı Gönder</button>
		</div>

	</div>
</form><!-- End Contact Form -->