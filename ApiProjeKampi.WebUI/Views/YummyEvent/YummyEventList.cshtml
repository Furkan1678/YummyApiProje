@model List<ApiProjeKampi.WebUI.Dtos.EventDtos.ResultEventDto>

@{
    ViewData["Title"] = "YummyEventList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;

}



<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Etkinlik Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Etkinlik Adı</th>
                                    <th scope="col">Etkinlik Ücreti</th>
                                    <th scope="col">Etkinlik Durumu</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th><!-- VEYA@item.CategoryId -->
                                        <td>@item.Title</td>
                                        <td>@item.Price</td>
                                        <td>@item.Status</td>
                                        <td><a href="/YummyEvent/DeleteYummyEvent/@item.YummyEventId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/YummyEvent/UpdateYummyEvent/@item.YummyEventId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>

                        <a href="/YummyEvent/CreateYummyEvent/" class="btn btn-dark">Etkinliği Ekle</a>


                    </div>
                </div>


            </div>

        </div>
    </div>
</section>




